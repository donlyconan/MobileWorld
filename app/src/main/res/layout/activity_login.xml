<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffe"
    tools:context=".activity.LoginActivity">
    <!--    <include layout=""-->
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/login_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:padding="20dp">
        <TextView
            android:id="@+id/txttitlelogin"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/colorToolbar"
            android:text="Đăng nhập để thanh toán"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorForeign"
            android:layout_marginTop="20dp"
            android:outlineAmbientShadowColor="@color/colorForeign">
            <EditText
                android:cursorVisible="false"
                android:hint="Phone Number"
                android:id="@+id/edtusername"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:textColor="@color/colorToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorForeign"
            android:outlineSpotShadowColor="@color/colorForeign">
            <EditText
                android:id="@+id/edtpassword"
                android:inputType="textPassword"
                android:textColor="@color/colorToolbar"
                android:cursorVisible="false"
                android:hint="Password"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/tilyourname"
            android:textColorHint="@color/colorForeign"
            android:outlineSpotShadowColor="@color/colorForeign">
            <EditText
                android:id="@+id/edtyourname"
                android:inputType="text"
                android:textColor="@color/colorToolbar"
                android:cursorVisible="false"
                android:hint="Your name"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:padding="0dp"
            android:background="#ccc"
            android:textColor="@color/colorForeign"
            android:text="Tạo tài khoản mới"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/btnregister"
            android:layout_margin="10dp"
            android:outlineProvider="none"/>
        <ProgressBar
            android:indeterminate="true"
            android:visibility="gone"
            android:id="@+id/progloadlogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <Button
                android:layout_marginRight="70dp"
                android:id="@+id/btnconfirm"
                android:textColor="#fff"
                android:background="@drawable/btn_radius"
                android:text="Xác nhận"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnback"
                android:background="@drawable/btn_radius"
                android:text="Trở về"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>